#!/bin/bash 
# Purpose: 
#    Configure all the information to run GRIB Extreme package. 
#    This is the only place where changes are needed. 
# Author: Deyong Xu / RTi@JCSDA
# History: 
#    7/9/2014, D. Xu / RTi@JCSDA , initial code.
#
set -ax

#========================================
# 1. Workin directory where data goes to.
#========================================
#
working_dir=/data/dxu/gribExtreme/scripts/tt

#========================================
# 2. GRIB Extreme package directory
#========================================
#
gribExtr_dir=/data/dxu/gribExtreme
script_dir=${gribExtr_dir}/scripts
exec_dir=${gribExtr_dir}/exec
exec_file=gribExtreme.x

#==========================
# 3. Specify cycle time
#==========================
cycleTime=2013073012

#========================================================
# 4. Input GRIB data directory, filename and title name
#========================================================
#
# 1) GFS GUESS info
gfs_ges_input_dir=/data/kkumar/IAT_tools/fcstdiv/grib_files/gfs
gfs_ges_input_file=pgbf06.gfs.2013073006
title1="gfs_ges"    #gfs guess
#
# 2) Current GFS analysis info 
crnt_anl_input_dir=/data/kkumar/IAT_tools/fcstdiv/grib_files/gfs
crnt_anl_input_file=pgbanl.gfs.2013073012
title2="gfs_anl"    # current gfs anl : gfs exp
#
# 3) Reference analysis info
ref_anl_input_dir=/data/kkumar/IAT_tools/fcstdiv/grib_files/ecm
ref_anl_input_file=pgbanl.ecm.2013073012
title3="ecmwf_anl"   #ref anl  : ecmwf  , gfs ctl

#========================================
# 5. Utility directory 
#    Utilities needed are: 
#      - ndate
#      - gribmap
#      - gxps
#      - grads
#      - grib2ctl.pl 
#      - gslib : grads library
#========================================
#
ndate_dir=/usr/local/jcsda/nwprod_gdas_2014/util/exec
gribmap_dir=/opt/grads/2.0.1-intel-12.1/bin
gxps_dir=/opt/grads/2.0.1-intel-12.1/bin
grads_dir=/opt/grads/2.0.1-intel-12.1/bin
grib2ctl_dir=/data/dxu/gribExtreme/scripts
gslib_dir=/data/dxu/gribExtreme/scripts/gslib

