SHELL=/bin/bash
include ../../include/Makefile_include

OBJS=   AMA2HDF_nm.o gnrt_prod_nm.o qc_at_nm.o calprod_nm.o \
	tpwclw_nm.o gnrt_bin_fname_nm.o gnrt_fname_nm.o seaice_nm.o \
	openfs.o read_parm.o read_corr_para.o read_systim.o \
	read_mask.o read_latbox_table.o init.o rama_whdfeos.o \
	rama_hd.o rama_scn.o scn_data.o  avn.o read_avn.o \
	getcal.o cnt2rd.o rad2at.o mask_stype.o corr.o \
	stemp.o emi.o snowcover.o wrt_prod.o   wrt_bin.o \
	set_sw.o sw_def.o def_dim.o def_geo.o def_data.o def_prod.o \
	gnrt_stime.o jd2md.o leapyear.o sw_wrt.o     \
	wrt_limit.o wrt_scal.o wrt_navig.o wrt_geo.o wrt_data.o \
	locate_ssmi.o set_month.o read_ssmir.o toolkit_td.o

INCLUDE =  -I$(HDFEOS_INC) -I$(HDF_INC)
LIBS	=  -L$(HDFEOS_LIB) -L$(HDF_LIB) -L${SZIP_LIB} -lhdfeos -lGctp -lmfhdf -ldf -ljpeg -lz -lm -lsz 


CMD = ${BIN_DIR}/runamsua_nm

all : $(CMD)


$(CMD) : $(OBJS)
	$(CC) $(INCLUDE) -o $(@) $(OBJS) $(LIBS)

.c.o:
	${CC} $(INCLUDE) -c $<

clean:
	-rm -f $(OBJS) $(CMD)
